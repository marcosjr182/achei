<%= simple_form_for(@proposal) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.association :owner %>
    <%= f.association :buyer %>
    <%= f.association :item %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
