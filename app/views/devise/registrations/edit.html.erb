<div class="container">
  
<div class=" col-md-10 col-md-offset-1">
  
<div class="page-header h2 col-md-12">Meu Perfil </div>

<div class="item col-md-12" style="padding:15px;">
  
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", hint: "deixe em branco se nÃ£o quiser alterar", required: false, label: "Nova Senha" %>
    <%= f.input :password_confirmation,label:"Confirme sua nova senha", required: false %>
    <%= f.input :current_password, hint: "digite sua senha atual para confirmar", required: true %>
    <%= f.hidden_field :avatar_cache %>
    <%= f.input :avatar %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Salvar" %>
  </div>
<% end %>
<br><br>
<h4>Cancelar minha conta</h4>

<p>Quer sair? <%= link_to "Cancelar Minha Conta", registration_path(resource_name), data: { confirm: "Tem certeza que deseja EXCLUIR sua conta?" }, method: :delete %></p>

<%= link_to "Voltar", :back %>
</div>
</div>
</div>
