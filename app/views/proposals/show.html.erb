<div class="container">
  <div class="col-md-10 col-md-offset-1">
    <div class="page-header">
      <h2><%= @item.name %></h2>
    </div>

    <div id="proposals" class="col-md-12">
      <% @proposals.each do |p| %>    
        <div class="col-md-2">
          <%= cl_image_tag p.buyer.avatar, class:"img-circle" %>
          <br> <%= p.buyer.name %>
        </div>
        <div class="col-md-8">
          <%= p.description %>
        </div>
        <div class="col-md-2 status">
          <%= link_to "Aceitar", "#", class:"btn aprovado" %>
          <br><br>
          <%= link_to "Recusar", "#", class:"btn recusado" %>
          
        </div>
      <% end %>
    </div>
  </div>
</div>

